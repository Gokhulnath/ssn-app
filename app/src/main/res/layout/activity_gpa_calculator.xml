<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GPACalculatorActivity">

    <RelativeLayout
        android:id="@+id/gpa_layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_82sdp">

        <ImageView
            android:id="@+id/gpa_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_82sdp"
            android:background="@drawable/tool_bar_curve" />

        <ImageView
            android:id="@+id/gpa_back"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:srcCompat="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_22sdp"/>

        <TextView
            android:id="@+id/gpa_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_toRightOf="@+id/gpa_back"
            android:fontFamily="@font/open_sans_bold"
            android:text="GPA Calculator"
            android:textColor="#ffffff"
            android:textSize="@dimen/_16ssp" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_285sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_below="@+id/gpa_layout1"
        android:layout_margin="@dimen/_20sdp"
        android:id="@+id/gpa_recycler_view"
        ></androidx.recyclerview.widget.RecyclerView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="5dp"
        android:clickable="true"
        android:layout_below="@+id/gpa_recycler_view"
        android:id="@+id/calculate_gpa_card"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:focusable="true">

        <TextView
            android:id="@+id/calculate_gpa_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/open_sans_bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:text="Calculate GPA"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/gpa_output_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calculate_gpa_card">

        <TextView
            android:id="@+id/gpa_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/open_sans_bold"
            android:text="8.2"
            android:textSize="@dimen/_50ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gpa_value"
            android:text=" /10"
            android:textSize="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_27sdp"
            ></TextView>
    </RelativeLayout>



</RelativeLayout>