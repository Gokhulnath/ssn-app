<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClubPageActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:minHeight="@dimen/_40sdp">
            <RelativeLayout
                android:id="@+id/dp_cover_RL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cover_pic_iv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:background="@color/shimmering_back"
                    android:scaleType="centerCrop"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/dp_pic_iv"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/circle"
                    android:padding="5dp"
                    android:layout_marginTop="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:src="@color/shimmering_front"/>

                <TextView
                    android:id="@+id/club_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club Name"
                    android:textColor="#000000"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="@dimen/_14ssp"
                    android:layout_below="@id/dp_pic_iv"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/club_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Club Name"
                    android:layout_below="@id/club_name_tv"
                    android:textColor="#000000"
                    android:fontFamily="@font/open_sans"
                    android:textSize="15dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    />
                <TextView
                    android:id="@+id/followers_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="followers"
                    android:layout_below="@id/club_description_tv"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textSize="14dp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    />
                <ImageView
                    android:id="@+id/follow_iv"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/blue_box"
                    android:layout_toRightOf="@id/followers_tv"
                    android:layout_below="@id/club_description_tv"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    app:srcCompat="@drawable/follow"
                    android:padding="@dimen/_5sdp"
                    />
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="bottom|center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_progress_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_text1_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_100sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:gravity="center"
                    android:text="No Posts"
                    android:textColor="#404040"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tv_text2_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_text1_cl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="We'll let you know if the Clubs posts any new post till then stay tuned."
                    android:textColor="#404040"
                    android:textSize="@dimen/_12ssp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottie_cl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/posts" />

            </RelativeLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_43sdp"
                android:visibility="gone"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/student_post_item_shimmering"/>
                    <include layout="@layout/student_post_item_shimmering"/>
                    <include layout="@layout/student_post_item_shimmering"/>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_15sdp"
                android:clipToPadding="false"
                android:id="@+id/feedsRV_cl"
                >
            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>