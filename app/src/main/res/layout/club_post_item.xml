<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#B7F1F1F1"
    app:cardCornerRadius="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/feed_view_club"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <RelativeLayout
                android:id="@+id/layout1_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:civ_circle_background_color="#D8D7D7"
                    app:srcCompat="@drawable/ic_user_white"
                    android:id="@+id/userImageIV_club" />

                <TextView
                    android:id="@+id/tv_author_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/userImageIV_club"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp"
                    android:singleLine="true"
                    android:text="SSN Institutions"
                    android:fontFamily="@font/open_sans"
                    android:layout_toStartOf="@+id/tv_time_club"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp" />



                <TextView
                    android:id="@+id/tv_time_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans"
                    android:textSize="@dimen/_12ssp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp" />
            </RelativeLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager_club"
                android:layout_width="match_parent"
                android:layout_below="@id/layout1_club"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="@dimen/_150sdp"
                android:background="@color/shimmering_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/currentImageTV_club"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/image_pos_bg"
                android:text="1 / 2"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:paddingBottom="@dimen/_3sdp"
                android:layout_below="@id/layout1_club"/>

            <RelativeLayout
                android:id="@+id/title_desc_RL_club"
                android:layout_below="@+id/viewPager_club"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:fontFamily="@font/open_sans_bold"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:text="Title"/>

                <com.hendraanggrian.appcompat.widget.SocialTextView
                    android:id="@+id/tv_description_club"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_below="@+id/tv_title_club"
                    android:textColorLink="#00000000"
                    app:fontFamily="@font/open_sans"
                    app:socialFlags="hashtag|mention|hyperlink"
                    app:hashtagColor="@color/colorAccent"
                    app:mentionColor="@color/colorAccent"
                    app:hyperlinkColor="@color/colorAccent"
                    android:text="Description"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_desc_RL_club">

                <ImageView
                    android:id="@+id/like_IV_club"
                    android:padding="@dimen/_6sdp"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    app:srcCompat="@drawable/heart"
                    />
                <ImageView
                    app:srcCompat="@drawable/comment"
                    android:id="@+id/comment_IV_club"
                    android:padding="@dimen/_6sdp"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_toRightOf="@id/like_IV_club"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />


            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>