<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ClubPostDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fakeAppbarLL"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:srcCompat="@drawable/ic_back"
            android:id="@+id/backIV"
            android:tint="@color/colorAccent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_3sdp"
            android:padding="@dimen/_2sdp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImageIV"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:src="@color/shimmering_front"
            android:padding="@dimen/_2sdp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:singleLine="true"
                    android:paddingRight="@dimen/_5sdp"
                    android:textColor="#000000"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:fontFamily="@font/open_sans"
                    android:singleLine="true"
                    android:textColor="@color/colorAccentText"
                    android:textSize="@dimen/_9ssp" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@color/shimmering_back"
        android:layout_below="@id/fakeAppbarLL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@+id/currentImageTV"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/image_pos_bg"
        android:text="1 / 2"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:layout_below="@id/fakeAppbarLL"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@+id/viewPager">

        <RelativeLayout
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/textGroupRL"
            android:animateLayoutChanges="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="#000000"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title"
                android:textColor="@color/colorAccentText"
                android:fontFamily="@font/open_sans"
                android:textSize="@dimen/_8ssp" />

            <com.hendraanggrian.appcompat.widget.SocialTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:textColor="#000000"
                android:textSize="@dimen/_12ssp"
                app:fontFamily="@font/open_sans"
                app:socialFlags="hashtag|mention|hyperlink"
                app:hashtagColor="@color/colorAccent"
                app:mentionColor="@color/colorAccent"
                app:hyperlinkColor="@color/colorAccent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/tv_time" />

            <TextView
                android:id="@+id/tv_attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:layout_below="@id/tv_description"
                android:visibility="gone"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/attachments"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_attachment"
                app:chipSpacingVertical="@dimen/_8sdp"
                app:chipSpacingHorizontal="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/attachmentsGroup"/>

            <RelativeLayout
                android:id="@+id/layout_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/attachmentsGroup">

                <ImageView
                    android:id="@+id/iv_like"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:srcCompat="@drawable/heart" />

                <TextView
                    android:id="@+id/tv_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:layout_toEndOf="@id/iv_like"
                    android:fontFamily="@font/open_sans"
                    android:textSize="@dimen/_14ssp" />

                <ImageView
                    android:id="@+id/iv_comment"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:srcCompat="@drawable/comment"
                    android:layout_toEndOf="@id/tv_like"
                    android:layout_marginStart="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:layout_toEndOf="@id/iv_comment"
                    android:fontFamily="@font/open_sans"
                    android:textSize="@dimen/_14ssp" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:srcCompat="@drawable/ic_share"
                    android:tint="@color/colorAccent"
                    android:layout_toEndOf="@id/tv_comment"
                    android:layout_marginStart="@dimen/_10sdp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:layout_below="@id/layout_icon"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/comments"
                android:textSize="@dimen/_12ssp" />

            <EditText
                android:id="@+id/edt_comment"
                android:hint="Comment"
                android:inputType="textMultiLine"
                android:layout_below="@+id/tv_comment_text"
                android:layout_marginEnd="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:text="post"
                android:id="@+id/btn_post_reply"
                android:layout_below="@+id/tv_comment_text"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>

    <ExpandableListView
        android:id="@+id/EV_comment"
        android:clipToPadding="false"
        android:layout_below="@id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp" />




</RelativeLayout>