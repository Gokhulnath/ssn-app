<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/drawerLayout"
	android:background="@android:color/white"
	tools:context=".HomeActivity">
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/fakeAppbarLL"
			android:orientation="horizontal">
			<ImageView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:padding="5dp"
				android:id="@+id/menuIV"
				android:layout_marginTop="10dp"
				android:layout_marginStart="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginBottom="10dp"
				android:layout_gravity="center"
				android:tint="@color/colorAccent"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?selectableItemBackground"
				android:src="@drawable/menu_icon"
				android:contentDescription="@string/menu_button"
				/>
			<RelativeLayout
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_gravity="center">
				<ImageView
					android:layout_width="70dp"
					android:layout_height="25dp"
					android:src="@drawable/ssn_logo"
					android:tint="@color/colorAccent" />
			</RelativeLayout>
			<ImageView
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:padding="2.5dp"
				android:layout_marginTop="10dp"
				android:layout_marginStart="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginBottom="10dp"
				android:layout_marginEnd="10dp"
				android:layout_marginRight="10dp"
				android:id="@+id/notificationIV"
				android:layout_gravity="center"
				android:tint="@color/colorAccent"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?selectableItemBackground"
				android:src="@drawable/notification_icon"
				android:contentDescription="@string/menu_button"
				/>

			<android.support.v7.widget.CardView
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginEnd="10dp"
				android:layout_marginRight="10dp"
				app:cardCornerRadius="20dp"
				android:layout_gravity="center"
				app:cardElevation="2dp"
				app:cardBackgroundColor="#D8D7D7"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp">
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:tint="#43A047"
					android:scaleType="centerCrop"
					android:id="@+id/userImageIV"
					android:src="@drawable/android_icon"/>
			</android.support.v7.widget.CardView>

		</LinearLayout>
		<com.ogaclejapan.smarttablayout.SmartTabLayout
			android:id="@+id/viewPagerTab"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:clipToPadding="false"
			android:layout_below="@id/fakeAppbarLL"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_gravity="bottom|center_horizontal"
			app:stl_clickable="true"
			app:stl_dividerColor="@android:color/transparent"
			app:stl_dividerThickness="0dp"
			app:stl_indicatorColor="@color/colorAccent"
			app:stl_indicatorCornerRadius="20dp"
			app:stl_indicatorGravity="center"
			app:stl_indicatorInterpolation="linear"
			app:stl_indicatorThickness="40dp"
			app:stl_underlineColor="@android:color/transparent"
			app:stl_underlineThickness="0dp"
			app:stl_customTabTextLayoutId="@layout/custom_tab"
			app:stl_customTabTextViewId="@+id/customTabTV"

			/>
		<android.support.v4.view.ViewPager
			android:id="@+id/viewPager"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/viewPagerTab"
			/>
	</RelativeLayout>
	<android.support.design.widget.NavigationView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="start"
		android:id="@+id/navigationView">

	</android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>