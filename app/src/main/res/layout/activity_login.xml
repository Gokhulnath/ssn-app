<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/onboardingTextColor1"
            android:gravity="center"
            android:text="@string/welcome"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"/>
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@android:color/tab_indicator_text"
            android:gravity="center"
            android:text="Start exploring new feeds."
            android:textSize="@dimen/_14sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="Choose your category"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/text_white_bg">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_11ssp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/progress"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@+id/tv_message"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/progress_circle"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:layout_weight="1"
            android:layout_margin="@dimen/_20sdp"
            android:id="@+id/cv_student"
            android:visibility="invisible"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorAccent"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:text="Student"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:id="@+id/cv_faculty"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_margin="@dimen/_20sdp"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorAccent"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:text="Faculty"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>