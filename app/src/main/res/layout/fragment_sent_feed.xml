<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/posts" />

        <TextView
            android:id="@+id/text1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_200sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:gravity="center"
            android:text="No Posts"
            android:textColor="@color/colorAccentText"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/text2TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1TV"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="We'll let you know for new feeds till then stay tuned."
            android:textColor="@color/colorAccentText"
            android:textSize="@dimen/_12ssp" />

    </RelativeLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/faculty_sent_post_item_shimmering" />

            <include layout="@layout/faculty_sent_post_item_shimmering" />

            <include layout="@layout/faculty_sent_post_item_shimmering" />
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/syllabusCV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:layout_weight="1"
                    app:cardElevation="0dp"
                    android:clickable="true"
                    android:foreground="?selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="vertical"
                        android:background="@color/colorAccentAlpha"
                        android:padding="@dimen/_10sdp">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/ic_calculator"
                            android:id="@+id/iconIV1"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/linkTitleTV1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="GPA calculator"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/libraryCV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_4sdp"                    android:layout_weight="1"
                    android:clickable="true"
                    app:cardElevation="0dp"
                    android:foreground="?selectableItemBackgroundBorderless"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@color/colorAccentAlpha"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:tint="@color/colorAccent"
                            android:src="@drawable/ic_grade"
                            android:id="@+id/iconIV2"/>
                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/linkTitleTV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Pass Mark Calculator"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedsRV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/linearlayout1"
                android:clipToPadding="false"></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/newPostTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/new_post_text_bg"
        android:clickable="true"
        android:drawableStart="@drawable/ic_arrow_upward_white_24dp"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/open_sans_semi_bold"
        android:foreground="?android:selectableItemBackground"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:text="New posts"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</RelativeLayout>