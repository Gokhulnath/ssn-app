<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".LogoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:id="@+id/tempIV"
                android:scaleType="fitCenter"
                android:src="@drawable/welcome_back"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:paddingTop="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/onboardingTextColor1"
                android:gravity="center"
                android:text="@string/welcome"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@android:color/tab_indicator_text"
                android:gravity="center"
                android:text="You were successfully signed out"
                android:textSize="@dimen/_14sdp"/>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:id="@+id/signInCV"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:text="Login now"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/progress"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/progress_circle"/>

</RelativeLayout>