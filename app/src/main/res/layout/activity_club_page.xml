<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".ClubPageActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/layout_collapse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="#ffffff"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/layout_page_detail"
                android:layout_marginTop="@dimen/_15sdp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_cover_pic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:background="@color/shimmering_back"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/backIV"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_2sdp"
                    app:srcCompat="@drawable/ic_back" />

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:srcCompat="@drawable/ic_share"
                    android:id="@+id/shareIV"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/_7sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_marginStart="@dimen/_20sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_dp_pic"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="@dimen/_2sdp"
                        android:src="@color/shimmering_front"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_alignBottom="@+id/tv_title"
                        android:layout_alignParentEnd="true">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            app:lottie_rawRes="@raw/subcribe"
                            app:lottie_autoPlay="true"/>

                        <TextView
                            android:id="@+id/tv_following_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/open_sans_bold"
                            android:layout_marginStart="@dimen/_45sdp"
                            android:textColor="@color/light_grey"
                            android:textSize="@dimen/_12ssp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:fontFamily="@font/open_sans_bold"
                        android:textSize="@dimen/_16ssp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/iv_dp_pic" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_title"
                        android:textColor="@color/colorAccentText"
                        android:fontFamily="@font/open_sans"
                        android:textSize="@dimen/_10ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_description"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_call"
                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@null"
                            android:layout_weight="1"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:textSize="@dimen/_12ssp"/>

                        <LinearLayout
                            android:id="@+id/followers_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_followers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_bold"
                                android:textColor="#000000"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/tv_followers_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans_semi_bold"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:textColor="@color/light_grey"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:background="@color/white"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:srcCompat="@drawable/ic_back"
                        android:id="@+id/tool_iv_back"
                        android:tint="@color/colorAccent"
                        android:layout_gravity="center"
                        android:padding="@dimen/_2sdp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tool_iv_dp"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:src="@color/shimmering_front"
                        android:padding="@dimen/_2sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/tool_tv_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:textColor="@color/colorAccent"
                            android:layout_marginEnd="@dimen/_35sdp"
                            android:textSize="@dimen/_14ssp" />

                        <TextView
                            android:id="@+id/tool_tv_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tool_tv_title"
                            android:textColor="@color/colorAccentText"
                            android:fontFamily="@font/open_sans"
                            android:text="No posts"
                            android:layout_marginEnd="@dimen/_35sdp"
                            android:textSize="@dimen/_9ssp" />

                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            app:srcCompat="@drawable/ic_share"
                            android:id="@+id/tool_iv_share"
                            android:layout_alignParentEnd="true"
                            android:tint="@color/colorAccent"
                            android:layout_gravity="center"
                            android:padding="@dimen/_7sdp" />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/_43sdp"
                android:visibility="gone"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include layout="@layout/student_post_item_shimmering"/>
                    <include layout="@layout/student_post_item_shimmering"/>
                    <include layout="@layout/student_post_item_shimmering"/>
                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <RelativeLayout
                android:id="@+id/layout_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    app:lottie_rawRes="@raw/posts"
                    app:lottie_loop="false"
                    app:lottie_autoPlay="true" />

                <TextView
                    android:id="@+id/tv_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:text="No Posts"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_180sdp"
                    android:textColor="@color/colorAccentText"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tv_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="We'll let you know for new posts till then stay tuned."
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorAccentText"
                    android:layout_below="@+id/tv_text1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:id="@+id/feedsRV"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>