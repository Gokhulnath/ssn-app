<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AboutTeamActivity">

    <ImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/iv_app_icon"
        android:background="@drawable/app_icon"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginLeft="@dimen/_10sdp" />

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_toRightOf="@+id/iv_app_icon"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp">

        <RelativeLayout
            android:id="@+id/layout11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:text="SSN App"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:fontFamily="@font/open_sans_bold"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_18sdp"
                android:textSize="@dimen/_10ssp"
                android:text="v1.0"
                android:layout_toRightOf="@+id/tv_title"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/ic_version_bg"
                android:layout_centerVertical="true"
                android:fontFamily="@font/open_sans"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10ssp"
            android:text="SSN Institutions"
            android:layout_below="@+id/layout11"
            android:textColor="#636363"
            android:fontFamily="@font/open_sans"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/_25sdp">

            <ImageView
                android:id="@+id/iv_web"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/ic_web"/>

            <ImageView
                android:id="@+id/iv_fb"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_web"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_fb"/>

            <ImageView
                android:id="@+id/iv_insta"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_fb"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_insta"/>

            <ImageView
                android:id="@+id/iv_twit"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_insta"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_twit"/>

            <ImageView
                android:id="@+id/iv_linkedin"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_twit"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@drawable/ic_linkedin"/>

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="@dimen/_10sdp"
        android:scrollbars="none"
        android:divider="@null"/>

</RelativeLayout>