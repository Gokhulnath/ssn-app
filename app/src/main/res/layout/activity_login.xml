<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_above="@+id/layout_choice"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/onboardingTextColor1"
            android:gravity="center"
            android:text="@string/welcome"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"/>
        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@android:color/tab_indicator_text"
            android:gravity="center"
            android:text="Start exploring new feeds."
            android:textSize="@dimen/_14sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Choose your role"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:id="@+id/layout_choice"
        android:layout_margin="@dimen/_20sdp"
        android:paddingTop="@dimen/_14sdp"
        android:paddingBottom="@dimen/_14sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp"
                android:id="@+id/cv_student"
                android:visibility="invisible"
                android:tag="Internals"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:padding="@dimen/_14sdp"
                    android:background="@color/colorAccentAlpha"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:tint="@color/colorAccent"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:src="@drawable/ic_user_white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/colorAccent"
                        android:text="Student"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp"
                android:id="@+id/cv_faculty"
                android:visibility="invisible"
                android:tag="Results"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:padding="@dimen/_14sdp"
                    android:background="@color/colorAccentAlpha"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:tint="@color/colorAccent"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:src="@drawable/ic_user_white" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/colorAccent"
                        android:text="Faculty"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/layout_card1"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp"
                android:id="@+id/cv_club"
                android:visibility="invisible"
                android:tag="Internals"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:padding="@dimen/_14sdp"
                    android:background="@color/colorAccentAlpha"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:tint="@color/colorAccent"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:src="@drawable/ic_event" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/colorAccent"
                        android:text="Club"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="0dp"
                android:tag="Results"
                android:id="@+id/cv_event"
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:layout_marginEnd="@dimen/_14sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:padding="@dimen/_14sdp"
                    android:background="@color/colorAccentAlpha"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:tint="@color/colorAccent"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:src="@drawable/ic_event" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/open_sans_bold"
                        android:textColor="@color/colorAccent"
                        android:text="Event"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_progress"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/text_white_bg">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Processing"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/_11ssp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/progress"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_below="@+id/tv_message"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/progress_circle"/>
    </RelativeLayout>

</RelativeLayout>